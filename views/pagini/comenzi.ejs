<!DOCTYPE html>
<html lang="ro">

<head>
	<title>Comenzi</title>
	<meta name="keywords" content="pc,placa video, procesor, ram, placa de baza, cooler ">
  <meta name="description" content="Construieste-ti propiul pc cu cele mai bune componente!">
  
  
  <link rel="stylesheet" href="/resurse/css/pagini/produse/paginator.css" type="text/css" />
	<link rel="stylesheet" href="/resurse/css/pagini/comenzi/comanda.css" type="text/css" />
  <script type="text/javascript" src="/resurse/js/comenzi.js"></script>
	<script type="text/javascript" src="/resurse/js/paginator_comenzi.js"></script>
  <%- include("../fragmente/head") %>

</head>

<body class="dark">

	<%- include("../fragmente/header") %>

		<main>
			<h1>Comenzi</h1>
            <section>
                <div class="comenzi">
                    <% for(comanda of locals.comenzi) {%>
                      <div id="comanda">
                        <div class="numarColet">
                          <p id="nrc">Numarul comenzii: <span id="numar_comanda"><%= comanda.numarComanda %></span></p> 
                        </div>
                        <div class="status_colet">
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="status1_<%= comanda.numarComanda%>">
                            <label class="form-check-label" for="checkbox1">
                              Iau coletul din depozit
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="status2_<%= comanda.numarComanda%>">
                            <label class="form-check-label" for="checkbox2">
                              Livrez coletul
                            </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="status3_<%= comanda.numarComanda%>">
                            <label class="form-check-label" for="checkbox3">
                              Am livrat coletul
                            </label>
                          </div>
                        </div>
                      </div>
                    <% } %>
                  </div>
                  <div class="pagination">
                    <button id="prevBtn"  disabled>Prev</button>
                    <span id="currentPage"></span> <p> / </p> <span id="totalPages"></span>
                    <button id="nextBtn">Next</button>
                </div> 
            </section>			
		</main>
	<%- include("../fragmente/footer") %>
</body>
</html>